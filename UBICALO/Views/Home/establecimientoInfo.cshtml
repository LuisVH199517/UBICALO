
@model UBICALO.ViewModel.VmEstablecimientoInfo
@{
    ViewBag.Title = "Productos y servicios";
}

<div class="">

    <div class="page-title">
        <div class="title_left">
            @if (Model.establecimientoNombre != null)
            {
                <h3>Productos y servicios de @Model.establecimientoNombre</h3>
            }
            else
            {
                <h3>Productos y </h3>
            }
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    @*<h2>Pricing Tables Design</h2>*@
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">
                    <div class="row">

                        <div class="col-md-12">

                            <!-- price element -->

                            @foreach (var p in Model.productos)
                            {
                                <div class="col-md-3 col-sm-6 col-xs-12">
                                    <div class="pricing">
                                        <div class="title">
                                            <h2>@p.Categoria.Nombre</h2>
                                            <h1>S/ @p.Costo</h1>
                                            <h2>@p.Nombre</h2>
                                        </div>
                                        <div class="x_content">
                                            <div class="">
                                                <div class="pricing_features">
                                                    <i class="fa fa-check text-success"></i> @p.Descripcion
                                                </div>
                                            </div>
                                            <div class="pricing_footer">
                                                <a href="@Url.Action("compraProducto", new { productoID = p.ProductoID })" class="btn btn-success btn-block" role="button">¡Comprar <span> ahora!</span></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



